<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-7 mx-auto my-4 py-3 post-con">
            <div class="text-center">
                <h1>About</h1>
            </div>
            <div>
                <h5>Welcome to the site ladies and gentleman!!!</h5>
            </div>
            <hr>
            <div class="text-center">
                <h1>Contact Me</h1>
            </div>
            <div class="text-center">
                <form id="contactForm" class="text-center" action="/about" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" id="name" placeholder="Name" name="name"
                            minlength="1" maxlength="30"
                            title="Name must be between 1-30 characters."
                            required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="email" type="email" placeholder="Email" name="email" required>
                    </div>
                    <div class="form-group">
                         <textarea class="form-control" id="message" name="message[text]" placeholder="Your message text..."
                         rows="5" cols="70" maxlength="1000" required></textarea>
                    </div>
                    <button class="btn btn-success btn-sm" id="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/scripts/contact.js"></script>

