<script>
    var alignClass = Quill.import('attributors/style/align');
    Quill.register(alignClass, true);

    var toolbarOptions = [
        ['bold', 'italic', 'underline', 'strike', 'code', 'code-block', 'blockquote', 'link', 'image', 'video'], // toggled buttons

        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
        [{ 'indent': '-1' }, { 'indent': '+1' }],          // outdent/indent
        [{ 'direction': 'rtl' }],                         // text direction

        [{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
        [{ 'align': [] }],

        ['clean'],   

        [{ 'font': [] }],
        [{ 'size': ['small', false, 'large', 'huge']}],  // custom dropdown
        [{ 'header': [1, 2, 3, 4, 5, 6, false]}],
    ];

    var quill = new Quill('#editor', {
        modules: {
            syntax: true,
            toolbar: toolbarOptions,
            clipboard: {
                matchVisual: false
            }
        },
        theme: 'snow'
    });

    var form = document.querySelector('.postForm');

    form.onsubmit = function () {
        var body = document.querySelector('.hidden');
        body.value += quill.root.innerHTML;
        form.submit();
    };
</script>