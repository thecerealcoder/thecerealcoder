<%include ../partials/header%>

<div class="container">
	<div class="row">
		<div class="col-md-11 mx-auto my-4 py-3 post-con">
			<h1 style="text-align: center; margin: 25px auto">Edit Post</h1>
			<div class="text-center">
				<form class="postForm" action="/posts/<%=post.slug%>?_method=PUT" method="POST"
					enctype="multipart/form-data">
					<div class="form-group">
						<input class="form-control" type="text" name="post[name]" value="<%=post.name%>"
							placeholder="Title" />
					</div>
					<div class="form-group pb-4">
						<label class="text-center font-weight-bold" for="image">Image </label>
						<input type="file" id="image" name="image" accept="image/*" />
					</div>
					<div class="form-group pb-2">
						<input name="post[body]" class="hidden" type="hidden" />
						<div id="editor" style="min-height: 400px; background: white"><%-post.body%></div>
					</div>
					<div class="form-group">
						<button class="btn btn-sm btn-primary submit">Submit</button>
					</div>
				</form>
				<a href="/">Go Back</a>
			</div>
		</div>
	</div>
</div>

<%include ../partials/footer%>