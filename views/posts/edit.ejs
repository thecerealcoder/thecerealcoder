<%include ../partials/header%>

<div class="container">
    <h1 style="text-align:center; margin:25px auto;">Edit Post</h1>
    <div style="width:50%; margin:25px auto;">
        <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[name]" value="<%=post.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[image]" value="<%=post.image%>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="post[body]" value="<%=post.body%>" rows="10"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>

<%include ../partials/footer%>