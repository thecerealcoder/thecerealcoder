<%include ../partials/header%>

    <div class="container">
        <div class="row">
            <div class="col-md-11 mx-auto my-4 py-3 post-con">
                <div class="postDiv">
                    <h5 class="mb-0 pb-2">
                        <%=(post.date.toUpperCase().replace(",",""))%>
                    </h5>
                    <h1 id="postTitle">
                        <%=post.name%>
                    </h1>
                    <div class="pb-4 divBody">
                        <%-post.body%>
                    </div>
                </div>
                <% if(currentUser && currentUser.isAdmin === true) { %>
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-sm btn-primary mr-1" href="/posts/<%=post.slug%>/edit" role="button">Edit</a>
                        <form class="delete-form" action="/posts/<%=post.slug%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>


                        <!--COMMENT SECTION START-->
                        <div class="comDiv">
                            <!--Setting up the add new comment button that is used for collapsing-->
                            <div class="d-flex mt-4">
                                <h4><strong>Comments <i class="fas fa-comments"></i></strong></h4>
                                <a class="btn btn-sm btn-success ml-auto my-auto" id="addComment" role="button" data-toggle="collapse" href="#collapseComment" aria-expanded="false" aria-controls="collapseComment">
                                    <i class="fas fa-plus"></i> Add Comment</a>
                            </div>

                            <!--Comment section title-->


                            <!--Collapse Add a comment form START-->
                            <div class="collapse" id="collapseComment">
                                <div class="pl-3" style="border-left: 5px solid #00C851;">
                                    <% if(!currentUser) { %>
                                        <h5>You must be logged in to comment!</h5>
                                        <% } %>
                                            <% if(currentUser) { %>
                                                <h4>Add New Comment <i class="fas fa-comment-dots"></i></h4>
                                                <form id="add-comment-form" action="/posts/<%= post.slug %>/comments" method="POST">
                                                    <div class="form-group">
                                                        <textarea class="form-control comBox m-0" name="comment[text]" placeholder="Write your comment..." form="add-comment-form" rows="5" cols="70" maxlength="1000"></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <button class="btn btn-info btn-sm">Comment</button>
                                                    </div>
                                                </form>
                                                <% } %>
                                </div>
                            </div>
                            <!--Collapse Add a comment form END-->

                            <hr>

                            <!--Check if there are comments, if there are none say no comments.-->
                            <% if (post.comments.length === 0) { %>
                                <em style="color: grey;">No comments yet.</em>
                                <% } %>

                                    <!--Display comments by looping through them-->
                                    <% post.comments.forEach(function(comment) { %>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>
              <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
              <!--If the current user owns the comment, change the color of the user icon-->
              <i style="color: orange;" class="fas fa-user"></i>
              <% } else { %>
              <!--Else just display it black-->
              <i class="fas fa-user"></i>
              <% } %>
              <!--Print out the author username-->
              <%= comment.author.username %>
            </strong>
                                                <!--Show when the comment was made-->
                                                <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                                                <!--Printing the comment-->
                                                <p style="word-wrap: break-word;">
                                                    <%= comment.text %>
                                                </p>
                                                <!--If the visitor is logged in and the owner of the comment, show the edit and delete buttons-->
                                                <% if (currentUser && currentUser._id.equals(comment.author.id) || currentUser && currentUser.isAdmin) { %>
                                                    <!--Edit button used for collapsing the edit comment form-->
                                                    <a class="btn btn-sm btn-primary" role="button" data-toggle="collapse" href="#collapseEdit<%= comment._id %>" aria-expanded="false" aria-controls="collapse<%= comment._id %>">
              Edit</a>
                                                    <!--Delete comment button-->
                                                    <form id="delete-form" action="/posts/<%= post.slug %>/comments/<%= comment._id %>?_method=DELETE" method="POST" style="display: inline;">
                                                        <button class="btn btn-sm btn-danger">Delete</button>
                                                    </form>
                                                    <!--Edit comment form-->
                                                    <div class="collapse" id="collapseEdit<%= comment._id %>">
                                                        <div class="pl-3" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
                                                            <h4>Edit Comment <i class="fas fa-edit"></i></h4>
                                                            <form id="edit-comment-form<%= comment._id %>" action="/posts/<%= post.slug %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                                                                <div class="form-group">
                                                                    <textarea class="form-control comBox m-0" name="comment[text]" placeholder="Your comment text..." form="edit-comment-form<%= comment._id %>" rows="5" cols="70" maxlength="1000"><%= comment.text %></textarea>
                                                                    <span class="charSpan"></span>
                                                                </div>
                                                                <div class="form-group">
                                                                    <button class="btn btn-info btn-sm">Update</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <% } %>

                                                        <% if (currentUser && !(currentUser._id.equals(comment.author.id))) { %>

                                                            <!-- Reply Button -->
                                                            <a class="btn btn-sm btn-success" role="button" data-toggle="collapse" href="#collapseReply<%= comment._id %>" aria-expanded="false" aria-controls="collapseReply<%= comment._id %>">
              Reply</a>

                                                            <!--Reply Comment Form  -->
                                                            <div class="collapse" id="collapseReply<%= comment._id %>">
                                                                <div class="pl-3" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
                                                                    <h4>Reply Comment <i class="fas fa-reply"></i></h4>
                                                                    <form id="reply-comment-form<%= comment._id %>" action="/posts/<%= post.slug %>/comments" method="POST">
                                                                        <div class="form-group">
                                                                            <textarea class="form-control comBox m-0" name="comment[text]" placeholder="Your comment text..." form="reply-comment-form<%= comment._id %>" rows="5" cols="70" maxlength="1000"></textarea>
                                                                            <input type="hidden" name="commentReply" value="true" checked>
                                                                            <input type="hidden" name="parentComment" value="<%= comment.id %>" checked>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <button class="btn btn-info btn-sm">Comment</button>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                            <% } %>

                                                                <% if(comment.replies.length > 0) { %>
                                                                    <!-- See Replies Button -->
                                                                    <button class="btn btn-sm btn-secondary" id="seeReplies" role="button" data-toggle="collapse" href="#collapseReplies<%= comment._id %>" aria-expanded="false" aria-controls="collapseReplies<%= comment._id %>">
              View replies</button>
                                                                    <% } %>

                                                                        <hr>
                                            </div>
                                        </div>

                                        <!-- Comment Replies -->
                                        <% if(comment.replies.length > 0) { %>
                                            <% var level = 1; %>
                                                <% recursiveReply(comment.replies, comment, level) %>
                                                    <% } %>
                                                        <% }) %>
                        </div>

                        <div class="row justify-content-center">
                            <% if (pages && pages > 0) { %>
                                <ul class="pagination text-center">
                                    <% if (current == 1) { %>
                                        <li class="page-item disabled"><a class="page-link">First</a></li>
                                        <% } else { %>
                                            <li class="page-item"><a class="page-link" href="/posts/<%= post.slug %>">First</a></li>
                                            <% } %>

                                                <% if (current == 1) { %>
                                                    <li class="page-item disabled"><a class="page-link">«</a></li>
                                                    <% } else { %>
                                                        <li class="page-item"><a class="page-link" href="/posts/<%= post.slug %>?page=<%= Number(current) - 1 %>">«</a>
                                                        </li>
                                                        <% } %>

                                                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                                                <% if (i !== 1) { %>
                                                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                                                    <% } %>
                                                                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                                                            <% if (i == current) { %>
                                                                                <li class="page-item active">
                                                                                    <a class="page-link">
                                                                                        <%= i %>
                                                                                    </a>
                                                                                </li>
                                                                                <% } else { %>
                                                                                    <li class="page-item">
                                                                                        <a class="page-link" href="/posts/<%= post.slug %>?page=<%= i %>">
                                                                                            <%= i %>
                                                                                        </a>
                                                                                    </li>
                                                                                    <% } %>
                                                                                        <% if (i == Number(current) + 4 && i < pages) { %>
                                                                                            <li class="page-item disabled"><a class="page-link">...</a></li>
                                                                                            <% } %>
                                                                                                <% } %>

                                                                                                    <% if (current == pages) { %>
                                                                                                        <li class="page-item disabled"><a class="page-link">»</a></li>
                                                                                                        <% } else { %>
                                                                                                            <li class="page-item"><a class="page-link" href="/posts/<%= post.slug %>?page=<%= Number(current) + 1 %>">»</a>
                                                                                                            </li>
                                                                                                            <% } %>

                                                                                                                <% if (current == pages) { %>
                                                                                                                    <li class="page-item disabled"><a class="page-link">Last</a></li>
                                                                                                                    <% } else { %>
                                                                                                                        <li class="page-item"><a class="page-link" href="/posts/<%= post.slug %>?page=<%= pages %>">Last</a></li>
                                                                                                                        <% } %>
                                </ul>
                                <% } %>
                        </div>
                        <!--COMMENT SECTION END-->
            </div>
        </div>
    </div>


    <!-- Recursive function for getting all replies -->
    <% function recursiveReply(replies, root, level) { %>
        <% replies.forEach(function(reply) { %>
            <div class="row collapse replies<%=level%>" id="collapseReplies<%= root._id %>">
                <div class="col-md-12">
                    <strong>
      <% if (currentUser && currentUser._id.equals(reply.author.id)) { %>
      <!--If the current user owns the comment, change the color of the user icon-->
      <i style="color: orange;" class="fas fa-user"></i>
      <% } else { %>
      <!--Else just display it black-->
      <i class="fas fa-user"></i>
      <% } %>
      <!--Print out the author username-->
      <%= reply.author.username %>
    </strong>
                    <!--Show when the comment was made-->
                    <span class="pull-right"><%= moment(reply.createdAt).fromNow() %></span>
                    <!--Printing the comment-->
                    <p style="word-wrap: break-word;">
                        <%= reply.text %>
                    </p>
                    <!--If the visitor is logged in and the owner of the comment, show the edit and delete buttons-->
                    <% if (currentUser && currentUser._id.equals(reply.author.id) || currentUser && currentUser.isAdmin) { %>
                        <!--Edit button used for collapsing the edit comment form-->
                        <a class="btn btn-sm btn-primary" role="button" data-toggle="collapse" href="#collapseEdit<%= reply._id %>" aria-expanded="false" aria-controls="collapse<%= reply._id %>">
      Edit</a>
                        <!--Delete comment button-->
                        <form id="delete-form" action="/posts/<%= post.slug %>/comments/<%= reply._id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                        <!--Edit comment form-->
                        <div class="collapse" id="collapseEdit<%= reply._id %>">
                            <div class="pl-3" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
                                <h4>Edit Comment <i class="fas fa-edit"></i></h4>
                                <form id="edit-comment-form<%= reply._id %>" action="/posts/<%= post.slug %>/comments/<%= reply._id %>?_method=PUT" method="POST">
                                    <div class="form-group">
                                        <textarea class="form-control comBox m-0" name="comment[text]" placeholder="Your comment text..." form="edit-comment-form<%= reply._id %>" rows="5" cols="70" maxlength="1000"><%= reply.text %></textarea>
                                        <span class="charSpan"></span>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-info btn-sm">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <% } %>

                            <% if (currentUser && !(currentUser._id.equals(reply.author.id))) { %>

                                <!-- Reply Button -->
                                <a class="btn btn-sm btn-success" role="button" data-toggle="collapse" href="#collapseReply<%= reply._id %>" aria-expanded="false" aria-controls="collapseReply<%= reply._id %>">
      Reply</a>

                                <!--Reply Comment Form  -->
                                <div class="collapse" id="collapseReply<%= reply._id %>">
                                    <div class="pl-3" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
                                        <h4>Reply Comment <i class="fas fa-reply"></i></h4>
                                        <form id="reply-comment-form<%= reply._id %>" action="/posts/<%= post.slug %>/comments" method="POST">
                                            <div class="form-group">
                                                <textarea class="form-control comBox m-0" name="comment[text]" placeholder="Your comment text..." form="reply-comment-form<%= reply._id %>" rows="5" cols="70" maxlength="1000"></textarea>
                                                <input type="hidden" name="commentReply" value="true" checked>
                                                <input type="hidden" name="parentComment" value="<%= reply.id %>" checked>
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-info btn-sm">Comment</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <% } %>
                                    <hr>
                </div>
            </div>

            <% if(reply.replies.length > 0) { %>
                <% level++; %>
                    <% recursiveReply(reply.replies, root, level) %>
                        <% level--; %>
                            <% } %>
                                <% }); %>
                                    <% } %>

                                        <script src="/prism.js"></script>
                                        <script type="text/javascript" src="/scripts/title.js"></script>
                                        <script type="text/javascript" src="/scripts/characters.js"></script>

                                        <%include ../partials/footer%>