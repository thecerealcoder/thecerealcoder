<%include ../partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-9 mx-auto my-4 py-3 post-con">
            <div class="text-center">
                <h1><a><%=post.name%></a></h1>
                <p class="mb-0 pb-0">Published <%=post.date%></p>
                <p class="mt-0 pt-0">By TheCerealCoder</p>
            </div>
            <img class="img-fluid img-thumbnail" src="<%=post.image%>">
            <p><%=post.body%></p>
            <div class="d-flex justify-content-end">
                <a class="btn btn-primary mr-1" href="/posts/<%=post._id%>/edit">Edit</a>
                <form class="delete-form" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>

            
            <!--COMMENT SECTION START-->
    <div class="well">
        <!--Setting up the add new comment button that is used for collapsing-->
        <div class="d-flex mt-4"> 
        <h4><strong>Comments <i class="fas fa-comments"></i></strong></h4>
        <a class="btn btn-success ml-auto" role="button" data-toggle="collapse" href="#collapseComment" aria-expanded="false" aria-controls="collapseComment">
            <i class="fas fa-plus"></i> Add Comment</a>
        </div>
  
        <!--Comment section title-->
       
  
        <!--Collapse Add a comment form START-->
        <div class="collapse" id="collapseComment">
          <div class="well pl-3" style="border-left: 5px solid #00C851;">
              <% if(!currentUser) { %>
            <h5>You must be logged in to comment!</h5>
              <% } %>
              <% if(currentUser) { %>
            <h4>Add New Comment <i class="fas fa-comment-dots"></i><h4>
            <form id="add-comment-form" action="/posts/<%= post._id %>/comments" method="POST">
              <div class="form-group">
                <input class="form-control m-0" type="text" disabled value="<%= currentUser.username %>">
              </div>
              <div class="form-group">
                <textarea class="form-control m-0" name="comment[text]" placeholder="Write your comment..." form="add-comment-form" rows="5" cols="70" maxlength="1000"></textarea>
              </div>
              <div class="form-group">
                <button class="btn btn-success btn-sm">Comment</button>
              </div>
            </form>
              <% } %>
          </div>
        </div>
        <!--Collapse Add a comment form END-->
  
        <hr>
  
        <!--Check if there are comments, if there are none say no comments.-->
          <% if (post.comments.length === 0) { %>
        <em style="color: grey;">No comments yet.</em>
          <% } %>
  
        <!--Display comments by looping through them-->
          <% post.comments.forEach(function(comment) { %>
        <div class="row">
          <div class="col-md-12">
            <strong>
                <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
              <!--If the current user owns the comment, change the color of the user icon-->
              <i style="color: orange;" class="fas fa-user"></i>
                <% } else { %>
              <!--Else just display it black-->
              <i class="fas fa-user"></i>
                <% } %>
              <!--Print out the author username-->
                <%= comment.author.username %>
            </strong>
            <!--Show when the comment was made-->
            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
            <!--Printing the comment-->
            <p style="word-wrap: break-word;"><%= comment.text %></p>
            <!--If the visitor is logged in and the owner of the comment, show the edit and delete buttons-->
              <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
            <!--Edit button used for collapsing the edit comment form-->
            <a class="btn btn-xs btn-warning" role="button" data-toggle="collapse" href="#collapseEdit<%= comment._id %>" aria-expanded="false" aria-controls="collapse<%= comment._id %>">
              Edit</a>
            <!--Delete comment button-->
            <form id="delete-form" action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-xs btn-danger">Delete</button>
            </form>
            <!--Edit comment form-->
            <div class="collapse" id="collapseEdit<%= comment._id %>">
              <div class="well pl-3" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
                <h4>Edit Comment <i class="fas fa-edit"></i></h4>
                <form id="edit-comment-form<%= comment._id %>" action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                    <input class="form-control m-0" type="text" disabled value="<%= currentUser.username %>">
                  </div>
                  <div class="form-group">
                    <textarea class="form-control m-0" name="comment[text]" placeholder="Your comment text..." form="edit-comment-form<%= comment._id %>" rows="5" cols="70" maxlength="1000"><%= comment.text %></textarea>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-warning btn-sm">Update Comment <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                  </div>
                </form>
              </div>
            </div>
              <% } %>
            <hr>
          </div>
        </div>
          <% }) %>
      </div>
      <!--COMMENT SECTION END-->
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/scripts/comments.js"></script>

    <%include ../partials/footer%>