<% include ../partials/header.ejs %>

    <div class="container">
        <div class="row">
            <div class="col-md-7 mx-auto my-4 py-3 post-con">
                <div class="text-center">
                    <h1>Reset Password</h1>
                </div>
                <div class="text-center formDiv">
                    <form class="text-center formStyle" action="/reset/<%= token %>" method="POST">
                        <div class="form-group d-flex">
                            <i class="fas fa-key d-flex align-items-center"></i>
                            <input class="form-control w-100" type="password" name="password" placeholder="New password" autofocus="autofocus" minlength="8" required>
                        </div>
                        <div class="form-group d-flex mb-4">
                            <i class="fas fa-key d-flex align-items-center"></i>
                            <input class="form-control w-100" type="password" name="confirmPass" placeholder="Confirm password" minlength="8" required>
                        </div>
                        <button class="btn btn-success btn-sm submit">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer.ejs %>