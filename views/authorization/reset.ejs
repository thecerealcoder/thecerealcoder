<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-7 mx-auto my-4 py-3 post-con">
            <div class="text-center">
                <h1>Reset Password</h1>
            </div>
            <div class="text-center">
                <form action="/reset/<%= token %>" method="POST">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input type="password" name="password" placeholder="New password" autofocus="autofocus" class="form-control">
                      </div>
                      <div class="form-group">
                        <label for="confirm">Confirm Password</label>
                        <input type="password" name="confirmPass" placeholder="Confirm password" class="form-control">
                      </div>
                    <button id="submit">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/scripts/validate.js"></script>


<% include ../partials/footer.ejs %>